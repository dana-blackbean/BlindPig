---
layout: layouts/base.njk
section: store
---
<section class="hero-store">
    <div class="container mx-auto">
        <div class="w-full md:w-4/5 mr-auto">
            <h1>{{ hero_title }}</h1>
            <h3 class="hero-subtitle">{{ hero_tagline }}</h3>
            <p>
                {{ hero_text }}
            </p>
            <div class="mt-8">
                <a href="{{ hero_href }}" class="btn btn-default">{{ hero_button }}</a>
            </div>
        </div>
    </div>
    <div class="hero-store-pigsfly-top"></div>
</section>

<section class="bg-white py-16 relative">
    <div class="hero-store-pigsfly-bottom"></div>
    <div class="store-cigar"></div>
    <div class="container mx-auto">
        <div class="relative z-1 grid grid-rows-3 grid-flow-col gap-4">
            <div class="row-span-2 bg-header h-64"></div>
            <div class="col-span-2 bg-header h-64"></div>
            <div class="row-span-2 col-span-2 bg-header h-64"></div>
            <div class="row-span-2 col-span-2 bg-header h-64"></div>
            <div class="col-span-2 bg-header h-64"></div>
            <div class="row-span-2 bg-header h-64"></div>
        </div>
        <div class="flex flex-wrap">
            <div class="w-2/3">
                <img src="{{ shop_items[0].image }}" alt="{{ shop_items[0]. }}"
            </div>

        </div>
    </div>
</section>

<section class="pb-16 relative">
    <div class="container mx-auto">
        <div class="w-full md:w-4/5 mr-auto">
            <h1>{{ bottom_title }}</h1>
            <h3 class="hero-subtitle">{{ bottom_tagline }}</h3>
            <p>
                {{ bottom_text }}
            </p>
            <div class="mt-10">
                <a href="{{ bottom_href }}" class="btn btn-invert">{{ bottom_button }}</a>
            </div>
        </div>
    </div>
    <div class="store-blind-pig"></div>
</section>
