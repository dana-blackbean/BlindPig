---
layout: layouts/base.njk
section: store
---
<section class="hero-store">
    <div class="container mx-auto">
        <div class="w-full md:w-4/5 mr-auto relative z-10">
            <h1>{{ hero_title }}</h1>
            <h3 class="hero-subtitle">{{ hero_tagline }}</h3>
            <p>
                {{ hero_text }}
            </p>
            <div class="mt-8">
                <a href="{{ hero_href }}" class="btn btn-default">{{ hero_button }}</a>
            </div>
        </div>
    </div>
    <div class="hero-store-pigsfly-top"></div>
</section>

<section class="bg-white py-16 relative">
    <div class="hero-store-pigsfly-bottom"></div>
    <div class="store-cigar"></div>
    <div class="hidden xl:block container mx-auto">
        <div class="relative z-1 grid grid-rows-2 grid-flow-col gap-4">
            {% for item in shop_items %}
                {% if loop.index0 <= 2 %}
                    {% if loop.index0 != 0 %}
                        <div id="col_{{ loop.index }}" class="relative z-10 row-span-1 col-span-1 bg-gray-200 h-full">
                            {% if item.image and item.image != '/' %}<img class="w-full h-auto" src="{{ item.image }}" alt="{{ item.name }}" />{% endif %}
                        </div>
                    {% else %}
                        <div id="col_{{ loop.index }}" class="relative z-10 row-span-full col-span-2 bg-gray-200" style="height: 800px">
                            {% if item.image and item.image != '/' %}<img class="w-full h-auto" src="{{ item.image }}" alt="{{ item.name }}" />{% endif %}
                        </div>
                    {% endif %}
                {% endif %}
            {% endfor %}
        </div>
        <div class="relative z-1 grid grid-rows-2 grid-flow-col gap-4 pt-4">
            {% for item in shop_items %}
                {% if loop.index0 > 2 and loop.index0 <= 5 %}
                    {% if loop.index0 != 5 %}
                        <div id="col_{{ loop.index }}" class="relative z-10 row-span-1 col-span-1 bg-gray-200 h-full">
                            {% if item.image and item.image != '/' %}<img class="w-full h-auto" src="{{ item.image }}" alt="{{ item.name }}" />{% endif %}
                        </div>
                    {% else %}
                        <div id="col_{{ loop.index }}" class="relative z-10 row-span-full col-span-2 bg-gray-200" style="height: 800px">
                            {% if item.image and item.image != '/' %}<img class="w-full h-auto" src="{{ item.image }}" alt="{{ item.name }}" />{% endif %}
                        </div>
                    {% endif %}
                {% endif %}
            {% endfor %}
        </div>
    </div>
    <div class="xl:hidden container mx-auto">
        <div class="flex flex-wrap justify-center">
            {% for item in shop_items %}
                <div id="col_{{ loop.index }}" class="relative z-10 w-full md:w-1/2 lg:w-1/3 py-2 px-0 md:p-2">
                    <div class="bg-gray-200 h-64">
                        {% if item.image and item.image != '/' %}<img class="w-full h-auto" src="{{ item.image }}" alt="{{ item.name }}" />{% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

<section class="pb-16 relative">
    <div class="container mx-auto">
        <div class="w-full md:w-4/5 mr-auto">
            <h1>{{ bottom_title }}</h1>
            <h3 class="hero-subtitle">{{ bottom_tagline }}</h3>
            <p>
                {{ bottom_text }}
            </p>
            <div class="mt-8">
                <a href="{{ bottom_href }}" class="btn btn-invert">{{ bottom_button }}</a>
            </div>
        </div>
    </div>
    <div class="store-blind-pig"></div>
</section>
