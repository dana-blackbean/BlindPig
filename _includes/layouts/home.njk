---
layout: layouts/base.njk
section: home
---
<section class="hero">
    <div class="container mx-auto">
        <div class="w-full md:w-1/2 mr-auto">
            <h1>{{ preview_title }}</h1>
            <h3 class="hero-subtitle">{{ preview_subtitle }}</h3>
            <p>
                {{ preview_text }}
            </p>
            <div class="mt-10">
                <a href="/./#story" class="btn btn-invert">Our Story</a>
            </div>
        </div>
    </div>
    <div class="hidden lg:block hero-blindpig-top"></div>
</section>

<section class="favorites">
    <div class="w-32 opacity-50 mx-auto">
        <img src="/static/img/flourish_top.png" alt="flourish top" />
    </div>
    <div class="content text-medium">
        <h4>{{ favorites_title }}</h4>
        <p>{{ favorites_subtitle }}</p>
        <div class="flex flex-wrap justify-center py-4">
            {%- for item in favorites_items %}
                <div class="w-full md:w-1/3 lg:w-1/4 p-2 lg:p-4">
                    <img src="/static/img/photo-frame.png" class="w-full h-auto" />
                </div>
            {%- endfor %}
        </div>
        <div class="py-4">
            <a href="/./menu" class="btn btn-default">{{ menu_button }}</a>
        </div>
    </div>
    <div class="hidden lg:block hero-blindpig-bottom"></div>
</section>

<section class="menu flex">
    <div class="hidden lg:block lg:w-2/5">
        <img src="/static/img/cig.png" alt="cigarette" />
    </div>
    <div class="w-full lg:w-3/5 lg:my-auto">
        <div class="w-4/5 mx-auto text-medium">
            <h2>{{ menu_title }}</h2>
            <h3 class="py-2">{{ menu_subtitle }}</h3>
            <p class="pb-2">
                {{ menu_text }}
            </p>
            <div class="mt-6">
                <a href="/./menu" class="btn btn-default">{{ menu_button }}</a>
            </div>
        </div>
    </div>
    <div class="hidden lg:block hero-pigsfly-top"></div>
</section>

<section class="contact">
    <div class="max-w-screen-md px-2 mx-auto">
        <div class="text-center">
            <h2>{{ contact_title }}</h2>
            <p>{{ contact_text }}</p>
        </div>
        <form name="contact" method="POST" data-netlify="true" netlify-honeypot="bot-field" action="/thank-you">
            <input type="hidden" name="form-name" value="contact">
            <div class="flex flex-wrap">
                <div class="w-full md:w-1/2 p-1">
                    <label for="firstName">First Name</label>
                    <input id="firstName" type="text" required />
                </div>

                <div class="w-full md:w-1/2 p-1">
                    <label for="lastName">Last Name</label>
                    <input id="lastName" type="text" required />
                </div>

                <div class="w-full md:w-1/2 p-1">
                    <label for="emailAddress">Email Address</label>
                    <input id="emailAddress" type="text" required />
                </div>

                <div class="w-full md:w-1/2 p-1">
                    <label for="phoneNumber">Phone Number</label>
                    <input id="phoneNumber" type="tel" required />
                </div>

                <div class="w-full p-1">
                    <label for="messageContent">Message</label>
                    <textarea id="messageContent" type="text" rows="5"></textarea>
                </div>
            </div>
            <div class="mt-10">
                <button type="submit" class="btn btn-invert">{{ contact_button }}</button>
            </div>
        </form>
    </div>
    <div class="hidden lg:block hero-pigsfly-bottom"></div>
</section>