---
layout: layouts/base.njk
section: menu
---
<div class="bg-medium">
    {%- for menu in menu_items -%}
        <div class="container mx-auto py-5">
            <div class="flex justify-center">
                <div class="w-16 my-auto">
                    <img src="/static/img/flourish_bottom.png" alt="Flourish bottom" />
                </div>
                <div class="w-auto px-6 lg:px-10">
                    <h2>{{ menu.category }}</h2>
                </div>
                <div class="w-16 my-auto">
                    <img src="/static/img/flourish_bottom.png" alt="Flourish bottom" />
                </div>
            </div>
            <div class="flex flex-wrap justify-center pt-5">
                {%- for item in menu.items -%}
                    <div class="w-full sm:w-1/2 md:w-1/3 p-4">
                        <div class="flex">
                            <div class="w-auto">
                                <h4>{{ item.name }}</h4>
                            </div>
                            <div class="my-auto w-auto border-t border-yellow-500"></div>
                            <div class="w-auto px-3 my-auto">
                                {{ item.price_value_one }}
                            </div>
                        </div>
                        <div>
                            {{ item.description }}
                        </div>
                    </div>
                {%- endfor -%}
            </div>
        </div>
    {%- endfor -%}
</div>