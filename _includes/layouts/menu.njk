---
layout: layouts/base.njk
section: menu
---
<div class="menu-header">
    <h2 class="text-center">Menu</h2>
    <div class="menu-pigsfly-top"></div>
    <div class="menu-pigsfly-bottom"></div>
</div>
{%- for menu in menu_items -%}
    <div class="{%- if menu.category == 'Wines' -%}bg-medium{%- else -%}bg-white{%- endif -%}">
        <div class="max-w-screen-2xl px-3 mx-auto py-8 md:py-16">
            <div class="flex justify-center">
                <div class="w-16 my-auto">
                    <img src="/static/img/flourish_bottom.png" alt="Flourish bottom" />
                </div>
                <div class="w-auto px-6 lg:px-10">
                    <h2>{{ menu.category }}</h2>
                </div>
                <div class="w-16 my-auto">
                    <img src="/static/img/flourish_bottom.png" alt="Flourish bottom" />
                </div>
            </div>
            <div class="flex flex-wrap justify-center py-8">
                {%- for item in menu.items -%}
                    <div class="w-full sm:w-1/2 md:w-1/3 p-4">
                        {%- if item.price_value_two -%}
                            <h4 class="pb-2">{{ item.name }}</h4>
                            <div class="pb-2">
                                {{ item.description }}
                            </div>
                            <div>
                                <div class="flex pb-2">
                                    <div class="w-24 my-auto">
                                        {{ item.price_size_one }}
                                    </div>
                                    <div class="w-20 px-5 my-auto">
                                        <div class="price-border"></div>
                                    </div>
                                    <div class="w-auto my-auto">
                                        <span class="price-label">
                                            {{ item.price_value_one }}
                                        </span>
                                    </div>
                                </div>
                                <div class="flex pb-2">
                                    <div class="w-24 my-auto">
                                        {{ item.price_size_two }}
                                    </div>
                                    <div class="w-20 px-5 my-auto">
                                        <div class="price-border"></div>
                                    </div>
                                    <div class="w-auto my-auto">
                                        <span class="price-label">
                                            {{ item.price_value_two }}
                                        </span>
                                    </div>
                                </div>
                            </div>
                        {%- else -%}
                            <div class="flex">
                                <div class="w-auto my-auto">
                                    <h4 class="pb-2">{{ item.name }}</h4>
                                </div>
                                <div class="px-5 w-20 my-auto">
                                    <div class="price-border"></div>
                                </div>
                                <div class="price-label w-auto my-auto">
                                    <span class="price-label">
                                        {{ item.price_value_one }}
                                    </span>
                                </div>
                            </div>
                            <div>
                                {{ item.description }}
                            </div>
                        {%- endif -%}
                    </div>
                {%- endfor -%}
            </div>
        </div>
    </div>
{%- endfor -%}