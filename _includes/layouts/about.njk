---
layout: layouts/base.njk
section: about
---
<section class="about-section">
    <div class="container mx-auto">
        <div class="flex flex-wrap">
            <div class="w-full lg:w-2/5">
                <div class="floating-image">
                    <div class="flourish-top"></div>
                    <img src="{{ headline_image }}" alt="headline" />
                    <div class="flourish-bottom"></div>
                </div>
            </div>
            <div class="w-full lg:w-3/5">
                <h2>{{ headline_title }}</h2>
                <h3>{{ headline_subtitle }}</h3>
                <p>
                    {{ headline_text }}
                </p>
                <div class="mt-10">
                    <a href="/./menu" class="btn btn-default">{{ headline_button }}</a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="why-section">
    <div class="hidden lg:block image-wrapper"></div>
    <div class="container mx-auto">
        <div class="w-full lg:w-4/5">
            <h2>{{ why_title }}</h2>
            <h3>{{ why_subtitle }}</h3>
            <p>
                {{ why_text }}
            </p>
            <div class="mt-10">
                <a href="#" class="btn btn-invert">{{ why_button }}</a>
            </div>
        </div>
    </div>
    <div class="when-pigs-fly"></div>
</section>